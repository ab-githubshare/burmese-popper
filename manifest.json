{
  "name": "Burmese Converter",
  "version": "1.0",
  "description": "Just Another Zawgyi <=> Unicode Converter",
  "browser_action": {
    "default_title": "Burmese Converter: Select any text on the page to convert Zawgyi to Unicode"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "manifest_version": 2
}
